DO
$do$
DECLARE
  f_schema text;
BEGIN
FOR f_schema IN
    SELECT quote_ident(nspname)
    FROM   pg_namespace n
    WHERE  nspname !~~ 'pg_%'
    AND    nspname <> 'information_schema'
    AND    nspname <> 'xdb'
    AND    nspname <> 'c'
    AND    nspname <> 'e'
    AND    nspname <> 'migration'
    AND    nspname <> 'public'
LOOP
   EXECUTE 'SET LOCAL search_path = ' || f_schema;

     create table if not exists min_limit (
          id serial primary key not null,
          created_at timestamp without time zone not null default timezone('utc'::text, now()),
          min_limit int,
          account_id int not null);

     create table if not exists max_limit (
          id serial primary key not null,
          created_at timestamp without time zone not null default timezone('utc'::text, now()),
          max_limit int,
          account_id int not null);

END LOOP;
END
$do$
;
