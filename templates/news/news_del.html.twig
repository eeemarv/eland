{%- extends 'news/base/news_form.html.twig' -%}
{%- import 'macro/lbl.html.twig' as lbl -%}

{%- set cancel_route = 'news_show' -%}
{%- set is_del_form = true -%}

{%- block heading_title -%}
    {{- 'news_del.title'|trans({
        'subject': news_item.subject
    }) -}}
{%- endblock -%}

{%- block form_access -%}
    {{- lbl.dl(news_item.access, 'btn', 'access.visible_for') -}}
{%- endblock form_access -%}

{%- block form_submit_btn -%}
    {%- include 'form/submit_del_btn.html.twig' -%}
{%- endblock form_submit_btn -%}

{%- block css -%}
    {{- parent() -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
{%- endblock js -%}