{%- extends 'news/base/news_form.html.twig' -%}
{%- import 'macro/btn_link.html.twig' as bl -%}

{%- block heading_title -%}
    {{- 'news_add.title'|trans -}}
{%- endblock heading_title -%}

{%- set form_cancel_btn -%}
    {{- bl.cancel('news'|var_route) -}}
{%- endset -%}

{%- set form_submit_btn -%}
    {{- form_widget(form.submit,{
        'label': 'btn.add',
        'attr': {'class': 'btn-success'}
    }) -}}
{%- endset -%}

{%- block css -%}
    {{- parent() -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
{%- endblock js -%}