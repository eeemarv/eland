{%- extends 'news/base/news_base.html.twig' -%}

{%- if form is defined -%}
    {%- form_theme form 'form_3.html.twig' -%}
{%- endif -%}

{%- block content -%}
    <div class="panel panel-info">
        <div class="panel-heading">

        {{- form_start(form) -}}
        {{- form_errors(form) -}}
        <div class="custom-checkbox">

        {%- block form_content -%}
        {%- endblock -%}

        {%- block cancel_btn -%}
            <a href="{{- path(route, pp_ary()) -}}" class="btn btn-lg btn-default">
                {{- 'btn.cancel'|trans -}}
            </a>
            &nbsp;
        {%- endblock -%}

        {%- block submit_btn -%}
            {{- form_widget(form.submit, {
                'label': 'btn.edit',
                'attr': {'class': 'btn-primary btn-lg'},
            }) -}}
        {%- endblock submit_btn -%}

        </div>
        {{- form_end(form) -}}

        </div>
    </div>
{%- endblock content -%}

{%- block css -%}
    {{- parent() -}}
    {{- encore_entry_link_tags('datepicker') -}}
    {{- encore_entry_link_tags('summernote') -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
	{{- encore_entry_script_tags('datepicker') -}}
	{{- encore_entry_script_tags('summernote') -}}
{%- endblock js -%}
