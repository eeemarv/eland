{%- extends 'news/base/news_base.html.twig' -%}
{%- import 'macro/link.html.twig' as lnk -%}

{%- block content -%}

{%- for n in news_items -%}
    {%- set post_content_prepend -%}
        <h2 class="card-title">
            {{- lnk.pp_link_label('news_show', {'id': n.id}, n.subject) -}}
        </h2>
    {%- endset -%}

    {%- include 'news/include/news_item.html.twig' with {'item': n} -%}

{%- else -%}
    {%- include 'news/include/no_items.html.twig' -%}
{%- endfor -%}

{%- endblock -%}

{%- block css -%}
    {{- parent() -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
{%- endblock js -%}