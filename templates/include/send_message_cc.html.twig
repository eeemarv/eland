{%- embed 'form/form_embed.html.twig' -%}
    {%- import 'macro/link.html.twig' as l -%}
    {%- block form_content -%}

    {{- form_row(form.message, {
        'label': 'label.your_message',
        'attr': {
            'rows': 5,
            'minlength': 10,
            'maxlength': 5000
        }
    }) -}}

    {{- form_row(form.cc, {
        'label': can_reply ? 'label.send_cc' : 'mail_form.no_from_address_cc',
        'disabled': (not can_reply) or form.vars.disabled,
        'checked':can_reply and (not form.vars.disabled),
        'label_attr': {'class': 'checkbox-custom'}
    }) -}}

    {{- form_widget(form.submit,{
        'label': 'btn.send',
        'attr': {'class': 'btn-info'}
    }) -}}

    {%- endblock form_content -%}
{%- endembed -%}