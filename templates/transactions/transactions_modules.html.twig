{%- extends 'transactions/base/transactions_form.html.twig' -%}

{%- block assets_add -%}
    {{- parent() -}}
    {{- assets_add(['transactions_modules.js']) -}}
{%- endblock assets_add -%}

{%- block heading_title -%}
    {{- 'transactions_modules.title'|trans -}}
{%- endblock heading_title -%}

{%- block form_content -%}
    {{- form_row(form.service_stuff, {
        'label': 'transactions_modules.service_stuff.label',
        'required': false
    }) -}}

    {{- form_row(form.limits, {
        'label': 'transactions_modules.limits.label',
        'required': false
    }) -}}

    {{- form_row(form.autominlimit, {
        'label': 'transactions_modules.autominlimit.label',
        'help': 'transactions_modules.autominlimit.help',
        'required': false
    }) -}}

    {{- form_row(form.mass, {
        'label': 'transactions_modules.mass.label',
        'required': false
    }) -}}
{%- endblock form_content -%}
