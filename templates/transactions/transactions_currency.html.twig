{%- extends 'transactions/base/transactions_base.html.twig' -%}
{%- form_theme form 'form_3.html.twig' -%}

{%- block heading_fa -%}
    money
{%- endblock heading_fa -%}

{%- block heading_title -%}
    {{- 'transactions_currency.title'|trans -}}
{%- endblock heading_title -%}

{%- block content -%}

<div class="panel panel-info">
    <div class="panel-heading">

    {{- form_start(form) -}}
    <div class="custom-checkbox">

    {{- form_row(form.currency, {
        'label': 'transactions_currency.currency.label',
        'pre_addon': {
            'fa': 'money'
        }
    }) -}}

    {{- form_row(form.timebased_en, {
        'label': 'transactions_currency.timebased_en.label',
        'required': false
    }) -}}

    {{- form_row(form.per_hour_ratio, {
        'label': 'transactions_currency.per_hour_ratio.label',
        'help': 'transactions_currency.per_hour_ratio.help',
        'pre_addon': {
            'fa': 'clock-o'
        },
        'attr': {'min': 1},
        'required': false
    }) -}}

    {{- form_widget(form.submit, {
        'label': 'btn.edit',
        'attr': {'class': 'btn-primary btn-lg'},
    }) -}}

    <input type="hidden" name="form_token" value="{{ form_token }}">
    </div>
    {{- form_end(form) -}}

    </div>
</div>
{%- endblock content -%}
