{%- extends 'transactions/base/transactions_base.html.twig' -%}
{%- form_theme form 'form_3.html.twig' -%}

{%- block heading_fa -%}
    arrows-v
{%- endblock heading_fa -%}

{%- block heading_title -%}
    {{- 'transactions_system_limits.title'|trans -}}
{%- endblock heading_title -%}

{%- block content -%}

<div class="panel panel-info">
    <div class="panel-heading">

    {{- form_start(form) -}}
    <div class="custom-checkbox">

    {{- form_row(form.min, {
        'label': 'transactions_system_limits.min.label',
        'pre_addon': {
            'fa': 'arrow-down',
            'text': config_str('transactions.currency.name', schema)
        },
        'help': 'transactions_system_limits.min.help',
        'required': false
    }) -}}

    {{- form_row(form.max, {
        'label': 'transactions_system_limits.max.label',
        'pre_addon': {
            'fa': 'arrow-up',
            'text': config_str('transactions.currency.name', schema)
        },
        'help': 'transactions_system_limits.max.help',
        'required': false
    }) -}}

    {{- form_widget(form.submit, {
        'label': 'btn.edit',
        'attr': {'class': 'btn-primary btn-lg'},
    }) -}}

    <input type="hidden" name="form_token" value="{{ form_token }}">
    </div>
    {{- form_end(form) -}}

    </div>
</div>
{%- endblock content -%}
