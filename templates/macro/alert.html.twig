{%- macro alert() -%}
    {%- for a in app.session.flashbag.get('alert') -%}
        <div class="alert alert-{%- if a.type == 'error' -%}danger{%- else -%}{{- a.type -}}{%- endif %} alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            {{- a.message|raw -}}
        </div>
    {%- endfor -%}
{%- endmacro alert -%}