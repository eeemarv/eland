{%- macro btn(id, count) -%}
    {%- import _self as s -%}
    {{- s._r_btnlbl('btn', id, count) -}}
{%- endmacro btn -%}

{%- macro label(id, count) -%}
    {%- import _self as s -%}
    {{- s._r_btnlbl('label', id, count) -}}
{%- endmacro label -%}

{%- macro balance(balance) -%}
    <span class="label label-lg label-li label-info">
        {{- balance -}}
    </span>
{%- endmacro balance -%}

{%- macro txt_label(txt, style) -%}
    <span class="label label-lg label-li label-{{- style|default('default') -}}">
        {{- txt -}}
    </span>
{%- endmacro txt_label -%}
