{%- macro lbl(id) -%}
    {%- import _self as s -%}
    {{- s.span(id, 'lbl') -}}
{%- endmacro lbl -%}

{%- macro btn(id) -%}
    {%- import _self as s -%}
    {{- s.span(id, 'btn') -}}
{%- endmacro btn -%}

{%- macro btn_dl(id, label) -%}
    {%- import _self as s -%}
    <dl>
    </dl>
{%- endmacro btn_dl -%}

{%- macro dl(id, type, label) -%}
    {%- import _self as s -%}
    <dl>
        <dt>
            {{- label|trans -}}
        </dt>
        <dd>
            {{- s.span(id, type) -}}
        </dd>
    </dl>
{%- endmacro dl -%}

{%- macro span(id, type) -%}
    {%- set render = {
        'anonymous': {
            'class': 'danger',
            'title' : 'access.anonymous.title',
            'label': 'access.anonymous.label'
        },
        'guest': {
            'class': 'warning',
            'title': 'access.guest.title',
            'label': 'access.guest.label'
        },
        'user': {
            'class': 'default',
            'title': 'access.user.title',
            'label': 'access.user.label'
        },
        'admin': {
            'class': 'info',
            'title': 'access.admin.title',
            'label': 'access.admin.label',
        },
        'offer': {
            'class': 'default',
            'label': 'label.offer',
        },
        'want': {
            'class': 'secondary',
            'label': 'label.want'
        },
        'temporal': {
            'class': 'default border border-secondary-li',
            'label': 'label.temporal'
        },
        'permanent': {
            'class': 'secondary',
            'label': 'label.permanent'
        },
        'service': {
            'class': 'default border border-secondary-li',
            'label': 'label.services'
        },
        'stuff': {
            'class': 'secondary',
            'label': 'label.stuff'
        }
    } -%}
    <span class="{{- type }} {{ type -}}-{{- render[id].class -}}"{%- if render[id].title is defined %} title="{{- render[id].title|trans -}}"{%- endif -%}>
        {{- render[id].label|trans -}}
    </span>
{%- endmacro span -%}
