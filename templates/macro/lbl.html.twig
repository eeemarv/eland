{%- macro dl(id, label) -%}
    {%- import _self as s -%}
    <dl>
        <dt>
            {{- label|trans -}}
        </dt>
        <dd>
            {{- s.btn(id) -}}
        </dd>
    </dl>
{%- endmacro dl -%}

