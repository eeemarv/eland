<span class="{{- type }} {{ type -}}-{{- render[id][type ~ '_class'] -}}{%- if type == 'label' %} label-lg label-li{%- endif -%}"{%- if render[id].title is defined %} title="{{- render[id].title|trans -}}"{%- endif -%}>
