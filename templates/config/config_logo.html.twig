{%- extends 'config/base/config_form.html.twig' -%}

{%- set logo = config_str('system.logo', schema) -%}

{%- block pane_content -%}

<div class="panel-body bg-info">
    <div class="col-md-6">
        <div class="text-center center-block" id="img_user">
            <img id="img"
                {%- if logo == '' %} style="display:none;"{%- endif %}
                class="img-rounded img-responsive center-block"
                src="{%- if logo == '' %}{{- assets('1.gif') -}}{%- else -%}{{- s3(logo) -}}{%- endif -%}"
                data-base-url="{{- s3() -}}"
                data-replace-logo="1" />
            <div id="no_img"{%- if logo is not same as ('') %} style="display:none;"{%- endif -%}>
                <i class="fa fa-image fa-5x text-muted"></i>
                <br>Geen logo
            </div>
        </div>
        <br>
        <span class="btn btn-success btn-lg btn-block fileinput-button">
            <i class="fa fa-plus" id="img_plus"></i>
            &nbsp;
            Logo opladen
            <input type="file"
                name="image"
                data-url="{{- path('logo_upload', pp_ary()) -}}"
                data-fileupload
                data-message-file-type-not-allowed="Bestandstype is niet toegelaten."
                data-message-max-file-size="Het bestand is te groot."
                data-message-uploaded-bytes="Het bestand is te groot.">
        </span>
        <p class="text-warning">
            Toegestane formaten: jpg/jpeg, png, gif of svg.
            Je kan ook een afbeelding hierheen verslepen.
        </p>
        <a href="{{- path('logo_del', pp_ary()) -}}"
            id="btn_remove"
            {%- if logo is not same as('') %} style="display:none;"{%- endif %}
            class="btn btn-danger btn-block btn-lg">
            <i class="fa fa-times"></i>
            &nbsp;
            Logo verwijderen
        </a>
    </div>
</div>

{%- endblock pane_content -%}

{%- block css -%}
    {{- parent() -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
    {{- encore_entry_script_tags('fileupload') -}}
{%- endblock js -%}