{%- extends 'index/base/index_contact.html.twig' -%}

{%- set email_help -%}
	<ul>
		<li>{{- 'help.email_validation_link'|trans -}}</li>
		<li>{{- 'help.email_privacy'|trans -}}</li>
	</ul>
{%- endset -%}

{%- block container -%}

	<div class="panel panel-info">
		<div class="panel-heading">
			{{- form_start(form, {'attr': {'novalidate': 'novalidate'}}) -}}
			{{- form_errors(form) -}}

			{{- form_row(form.email, {
				'label': 'label.your_email',
				'help_html': true,
				'help': 'var',
				'help_translation_parameters': {
					'var': email_help
				},
				'pre_addon': {
					'fa': 'envelope-o'
				}
			}) -}}

			{{- form_row(form.message, {
				'label': 'label.your_message',
				'attr': {
					'rows': 5
				}
			}) -}}

			{%- include 'form/captcha.html.twig' -%}

			{%- include 'form/submit_send_btn.html.twig' -%}
			{{- form_end(form) -}}
		</div>
	</div>

	{%- embed 'include/hosting.html.twig' -%}
		{%- block contact_form_link -%}
			dit contactformulier
		{%- endblock -%}
	{%- endembed -%}
{%- endblock container -%}
