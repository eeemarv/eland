{%- extends 'contacts/base/contacts_base.html.twig' -%}

{%- block content -%}
{%- endblock content -%}

{%- if redirect_contacts -%}
    {%- set cancel_route = 'contacts' -%}
{%- else -%}
    {%- set cancel_route = is_self ? 'users_show_self' : 'users_show' -%}
    {%- set cancel_route_params = is_self ? {} : {'id': user_id} -%}
{%- endif -%}

{%- block form_a -%}
    {%- if form.user_id is defined -%}
        {{- form_row(form.user_id, {
            'label': 'label.for_user',
            'pre_addon': {
                'fa': 'user'
            },
            'attr': {
                'placeholder': 'label.account_code'
            }
        }) -}}
    {%- endif -%}

    {%- if form.contact_type_id is defined -%}
        {{- form_row(form.contact_type_id, {
            'label': 'contacts.type.label',
            'pre_addon': {
                'fa': 'circle-o-notch'
            },
            'attr': {
                'data-contact-type': ''
            }
        }) -}}
    {%- endif -%}

    {%- if form.value is defined -%}
        {{- form_row(form.value, {
            'label': 'label.value',
            'help': 'label.value',
            'pre_addon': {
                'fa': 'chevron-right'
            },
            'disabled': true
        }) -}}
    {%- endif -%}

    {%- if form.comments is defined -%}
        {{- form_row(form.comments, {
            'label': 'label.comment',
            'pre_addon': {
                'fa': 'comment-o'
            }
        }) -}}
    {%- endif -%}

    {%- if form.access is defined -%}
        {{- form_row(form.access, {
            'label': 'access.visible_for'
        }) -}}
    {%- endif -%}
{%- endblock form_a -%}