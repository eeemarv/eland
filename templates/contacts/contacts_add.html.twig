{%- extends 'contacts/base/contacts_form.html.twig' -%}

{%- block heading_title -%}
    {{- 'contacts_add.title'|trans({
        'self': is_self or not user_id ? 'self' : 'some_user',
        'user': user_id ? account(user_id, schema)|link('users_show', {'id': user_id}) : ''
    })|raw -}}
{%- endblock heading_title -%}

{%- block form_submit_btn -%}
    {%- include 'form/submit_add_btn.html.twig' -%}
{%- endblock form_submit_btn -%}

{%- block css -%}
    {{- parent() -}}
    {{- encore_entry_link_tags('datepicker') -}}
    {{- encore_entry_link_tags('summernote') -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
	{{- encore_entry_script_tags('datepicker') -}}
	{{- encore_entry_script_tags('summernote') -}}
{%- endblock js -%}