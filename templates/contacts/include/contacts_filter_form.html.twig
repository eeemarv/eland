<div class="row mb-5p">
    {{- form_row(filter_form.q, {
        'label': false,
        'col': 'sm-6',
        'pre_addon': {
            'fa': 'search'
        },
        'attr': {
            'placeholder': 'label.search'
        },
        'id': 'q'
    }) -}}

    {{- form_row(filter_form.type, {
        'label': false,
        'col': 'sm-6',
        'pre_addon': {
            'text': 'label.type'|trans,
            'fa': 'circle-o-notch'
        }
    }) -}}

</div>
<div class="row{%- if filter_form.access is defined %} mb-5p{%- endif -%}">

    {{- form_row(filter_form.ustatus, {
        'label': false,
        'col': filter_form.access is defined ? 'sm-6' : 'sm-5',
        'pre_addon': {
            'fa': 'user',
            'text': 'label.status'|trans
        }
    }) -}}

    {{- form_row(filter_form.user, {
        'label': false,
        'col': filter_form.access is defined ? 'sm-6' : 'sm-5',
        'pre_addon': {
            'fa': 'user'
        },
        'attr': {
            'placeholder': 'label.account_code'
        }
    }) -}}

{%- if filter_form.access is defined -%}

</div>
<div class="row">

    {{- form_row(filter_form.access, {
        'label': false,
        'col': 'sm-10',
        'count_ary': count_ary
    }) -}}

{%- endif -%}

    {{- form_row(filter_form.show, {
        'label': 'btn.show',
        'col': 'sm-2',
        'attr': {
            'class': 'btn btn-default btn-block'
        }
    }) -}}
</div>
