{%- extends 'password_reset/base/password_reset_base.html.twig' -%}

{%- block assets_add -%}
    {{- parent() -}}
    {{- assets_add(['generate_password.js']) -}}
{%- endblock assets_add -%}

{%- block heading_title -%}
    {{- 'password_reset_confirm.title'|trans -}}
{%- endblock heading_title -%}

{%- block form_a -%}
    {{- form_row(form.password, {
        'label': 'label.new_password',
        'help': 'password_reset_confirm.password.help',
        'pre_addon': {
            'fa': 'key'
        },
        'post_addon': {
            'btn': {
                'label': 'btn.generate'|trans,
                'attr': {'data-generate-password': ''}
            }
        }
    }) -}}
{%- endblock form_a -%}

{%- block form_cancel_btn -%}
{%- endblock form_cancel_btn -%}

{%- block form_submit_btn -%}
    {%- include 'form/submit_edit_btn.html.twig' with {
        'label': 'btn.save_password'
    } -%}
{%- endblock form_submit_btn -%}
