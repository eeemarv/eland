{%- extends 'password_reset/password_reset_base.html.twig' -%}

{%- block heading_title -%}
    {{- 'password_reset_set.title'|trans -}}
{%- endblock heading_title -%}

{%- block content -%}

{%- embed 'form/form_embed.html.twig' -%}
    {%- import 'macro/link.html.twig' as l -%}
    {%- block form_content -%}

    {{- form_row(form.password, {
        'label': 'label.new_password',
        'help': 'help.new_password_safety'
    }) -}}

    {{- form_widget(form.submit,{
        'label': 'btn.save_password',
        'attr': {'class': 'btn-primary'}
    }) -}}

    {%- endblock form_content -%}
{%- endembed -%}
{%- endblock content -%}

{%- block css -%}
    {{- parent() -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
    {{- encore_entry_script_tags('generate_password') -}}
{%- endblock js -%}