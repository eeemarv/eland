{%- extends 'base/sidebar.html.twig' -%}

{%- block heading -%}
    <h1>
    <i class="fa fa-key"></i>
    {{- 'password_reset_request.title'|trans -}}
    </h1>
{%- endblock heading -%}

{%- block content -%}

{%- embed 'form/embed.html.twig' -%}
    {%- import 'macro/link.html.twig' as l -%}
    {%- block form_content -%}

    {{- form_row(form.email, {
        'label': 'label.your_email',
        'explain': 'password_reset_request.email_explain'
    }) -}}

    {{- form_widget(form.submit,{
        'label': 'password_reset_request.btn',
        'attr': {'class': 'btn-info'}
    }) -}}

    {%- endblock form_content -%}
{%- endembed -%}
{%- endblock content -%}

{%- block css -%}
    {{- parent() -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
{%- endblock js -%}