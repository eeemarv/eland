{%- macro form_start(form) -%}
	{%- import _self as p -%}
	{{- p.post() -}}
	{{- form_start(form, {'attr': {'novalidate': 'novalidate'}}) -}} {# TODO remove novalidate #}
	{{- form_errors(form) -}}
{%- endmacro form_start -%}

{%- macro form_filter_start(form, collapse) -%}
	{%- import _self as p -%}
	{{- p.filter(collapse|default(false)) -}}
	{{- form_start(form) -}}
	{{- form_errors(form) -}}
{%- endmacro form_filter_start -%}

{%- macro form_column_select_start(form) -%}
	<div class="panel panel-info collapse" id="show_columns">
	<div class="panel-heading">
	{{- form_start(form) -}}
	{{- form_errors(form) -}}
{%- endmacro form_column_select_start -%}

{%- macro form_end(form) -%}
	{%- import _self as p -%}
	{{- form_end(form) -}}
	{{- p.end() -}}
{%- endmacro form_end -%}

{%- macro filter_toggle_btn() -%}
