{%- extends 'messages/base/messages_base.html.twig' -%}

{%- set active_admin_menu = 'messages_cleanup' -%}

{%- block heading_title -%}
    {{ 'messages_cleanup.title'|trans -}}
{%- endblock heading_title -%}

{%- block heading_fa -%}
    trash-o
{%- endblock heading_fa -%}

{%- block content -%}
    {%- embed 'form/form_embed.html.twig' -%}
        {%- import 'macro/btn_link.html.twig' as bl -%}
        {%- block form_a -%}
            {{- form_row(form.expires_at_days_default, {
                'label': 'messages_cleanup.expires_at_days_default',
                'help': 'messages_cleanup.help.expires_at_days_default',
                'addon_label': 'label.days',
                'attr': {'min': 1, 'max': 1460, 'data-expires-at-days-default': ''}
            }) -}}
            {{- form_row(form.expires_at_required, {
                'label': 'messages_cleanup.expires_at_required',
                'label_attr': {'class': 'checkbox-custom'},
                'attr': {'data-expires-at-required': ''}
            }) -}}
            {{- form_row(form.expires_at_switch_enabled, {
                'label': 'messages_cleanup.expires_at_switch_enabled',
                'label_attr': {'class': 'checkbox-custom'},
                'attr': {'data-expires-at-switch-enabled': ''}
            }) -}}
            {{- form_row(form.cleanup_enabled, {
                'label': 'messages_cleanup.cleanup_enabled',
                'label_attr': {'class': 'checkbox-custom'}
            }) -}}
            {{- form_row(form.cleanup_after_days, {
                'label': 'messages_cleanup.cleanup_after_days',
                'addon_label': 'label.days',
                'attr': {'min': 1, 'max': 365}
            }) -}}
            {{- form_row(form.expire_notify, {
                'label': 'messages_cleanup.expire_notify',
                'label_attr': {'class': 'checkbox-custom'}
            }) -}}

        {%- endblock form_a -%}

        {%- block form_cancel_btn -%}
            {{- bl.cancel('messages'|var_route) -}}
        {%- endblock form_cancel_btn -%}

        {%- block form_submit_btn -%}
            {{- form_widget(form.submit,{
                'label': 'btn.edit',
                'attr': {'class': 'btn-primary'}
            }) -}}
        {%- endblock form_submit_btn -%}
    {%- endembed -%}
{%- endblock content -%}

{%- block css -%}
    {{- parent() -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
	{{- encore_entry_script_tags('messages_cleanup') -}}
{%- endblock js -%}