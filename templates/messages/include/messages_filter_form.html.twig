<div class="row mb-5p">

    {{- form_row(filter_form.q, {
        'label': false,
        'col': filter_form.cat is defined ? 'sm-5' : 'sm-10',
        'pre_addon': {
            'fa': 'search'
        },
        'attr': {
            'placeholder': 'label.search'
        },
        'id': 'q'
    }) -}}

    {%- if filter_form.cat is defined -%}
        {{- form_row(filter_form.cat, {
            'label': false,
            'col': 'sm-5',
            'pre_addon': {
                'fa': 'clone'
            }
        }) -}}
    {%- endif -%}

    {{- form_row(filter_form.open_panel, {
        'label': '<i class="fa fa-chevron-down"></i>',
        'label_html': true,
        'col': 'sm-2',
        'attr': {
            'class': 'btn-default btn-block'
        }
    }) -}}

</div>
<div class="row mb-5p">

    {{- form_row(filter_form.ow, {
        'label': false,
        'col': 'sm-12',
        'count_ary': count_ary
    }) -}}

</div>

