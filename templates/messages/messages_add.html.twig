{%- extends 'messages/base/messages_form.html.twig' -%}
{%- import 'macro/btn_link.html.twig' as bl -%}

{%- block heading_title -%}
    {{ 'messages_add.title'|trans -}}
{%- endblock heading_title -%}

{%- set form_cancel_btn -%}
    {{- bl.cancel('messages'|var_route) -}}
{%- endset -%}

{%- set form_submit_btn -%}
    {{- form_widget(form.submit,{
        'label': 'btn.add',
        'attr': {'class': 'btn-success'}
    }) -}}
{%- endset -%}

{%- set data_fileupload_url -%}
    {{- path('messages_add_images_upload', pp_ary()|merge({'form_token': form.children.form_token.vars.value})) -}}
{%- endset -%}

{%- block css -%}
    {{- parent() -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
{%- endblock js -%}