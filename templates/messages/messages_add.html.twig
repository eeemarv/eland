{%- extends 'messages/base/messages_form.html.twig' -%}
{%- import 'macro/btn_link.html.twig' as bl -%}
{%- import 'macro/link.html.twig' as l -%}

{%- block heading_title -%}
    {{ 'messages_add.title'|trans -}}
{%- endblock heading_title -%}

{%- set form_cancel_btn -%}
    {{- bl.cancel('messages'|var_route) -}}
{%- endset -%}

{%- set form_submit_btn -%}
    {{- form_widget(form.submit,{
        'label': 'btn.add',
        'attr': {'class': 'btn-success'}
    }) -}}
{%- endset -%}

{%- set data_fileupload_url -%}
    {{- l.pp_path_image_token('messages_add_images_upload', 0) -}}
{%- endset -%}

{%- block css -%}
    {{- parent() -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
{%- endblock js -%}