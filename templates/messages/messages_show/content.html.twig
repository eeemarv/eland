{%- embed 'embed/list_item.html.twig' -%}
    {%- block dl -%}
        <dt>
            {{- 'label.description'|trans -}}
        </dt>
        <dd>
            {{- message.content|no_content -}}
        </dd>
    {%- endblock dl -%}
    {%- block div_right -%}
        {%- if pp_is_admin() or su_is_owner(user.id) -%}
            {%- include 'include/btn/edit.html.twig' with {
                'btn_route': 'messages_content_edit',
                'btn_route_params': {'id': id},
                'btn_title': 'messages_content_edit.btn',
                'btn_label_hidden': 'sm',
                'btn_lg': true,
            } -%}
        {%- endif -%}
    {%- endblock div_right -%}
{%- endembed -%}
