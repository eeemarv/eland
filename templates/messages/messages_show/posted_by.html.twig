{%- embed 'embed/list_item.html.twig' -%}
    {%- block dl -%}
        <dt>
            {{- 'label.posted_by'|trans -}}
        </dt>
        <dd>
            {{- 'post.info'|trans({
                'user': account(user.id, schema)|link('users_show', {'id': user.id}),
                'created_at': message.created_at|date_format('day', schema),
                'edit_count': message.edit_count,
                'postcode_select': user.postcode is null ? 'without' : 'with',
                'postcode': user.postcode ?? '',
            })|raw -}}
        </dd>
    {%- endblock dl -%}
    {%- block div_right -%}
        {%- if pp_is_admin() -%}
            {%- include 'include/btn/edit.html.twig' with {
                'btn_route': 'messages_user_edit',
                'btn_route_params': {'id': id},
                'btn_title': 'messages_user_edit.btn',
                'btn_label_hidden': 'sm',
                'btn_lg': true,
            } -%}
        {%- endif -%}
    {%- endblock div_right -%}
{%- endembed -%}
