{%- if config_bool('messages.fields.expires_at.enabled', schema) -%}
{%- embed 'embed/list_item.html.twig' -%}
    {%- block class -%}
        {%- if is_expired %} list-group-item-danger{%- endif -%}
    {%- endblock class -%}
    {%- block dl -%}
        <dt>
            {%- if is_expired -%}
                {{- 'label.expired_at'|trans -}}
            {%- else -%}
                {{- 'label.valid_until'|trans -}}
            {%- endif -%}
        </dt>
        <dd>
            {%- if message.expires_at is null -%}
                <span class="text-danger">
                    <i>
                        {{- 'messages_show.expires_at.never'|trans({
                            'offer_want': message.offer_want,
                        }) -}}
                    </i>
                </span>
            {%- else -%}
                {{- message.expires_at|date_format('day', schema) -}}
            {%- endif -%}
        </dd>
    {%- endblock dl -%}

    {%- block div_right -%}
    {%- if pp_is_admin() or su_is_owner(user.id) -%}

    {%- if not config_bool('messages.fields.expires_at.required', schema)
        and message.expires_at != null
    -%}

    {%- include 'include/btn/del.html.twig' with {
        'btn_route': 'messages_expires_at_del',
        'btn_route_params': {'id': id},
        'btn_title': 'messages_expires_at_del.btn',
        'btn_label_hidden': 'sm',
        'btn_lg': true,
    } -%}

    {%- endif -%}

    {%- if message.expires_at == null -%}

    {%- include 'include/btn/add.html.twig' with {
        'btn_route': 'messages_expires_at_add',
        'btn_route_params': {'id': id},
        'btn_title': 'messages_expires_at_add.btn',
        'btn_label_hidden': 'sm',
        'btn_lg': true,
    } -%}

    {%- else -%}

    {%- include 'include/btn/edit.html.twig' with {
        'btn_route': 'messages_expires_at_edit',
        'btn_route_params': {'id': id},
        'btn_title': 'messages_expires_at_edit.btn',
        'btn_label_hidden': 'sm',
        'btn_lg': true,
    } -%}

    {%- endif -%}

    {%- endif -%}

    {%- endblock div_right -%}
{%- endembed -%}
{%- endif -%}
