{%- if config_bool('messages.fields.units.enabled', schema) -%}
{%- embed 'embed/list_item.html.twig' -%}
    {%- block dl -%}
        <dt>
            {{- 'label.suggested_price'|trans -}}
        </dt>
        <dd>
            {%- if message.amount is null -%}
                {{- null|no_content -}}
            {%- else -%}
                {{- 'messages_show.suggested_price'|trans({
                    'amount': message.amount,
                    'units': message.units ?? '',
                    'currency': config_str('transactions.currency.name', schema),
                    'units_set': message.units == null or message.units == '' ? 'not_set' : 'set',
                }) -}}
            {%- endif -%}
        </dd>
    {%- endblock dl -%}

    {%- block div_right -%}

    {%- if pp_is_admin() or su_is_owner(user.id) -%}

        {%- if message.amount == null -%}

        {%- include 'include/btn/add.html.twig' with {
            'btn_route': 'messages_units_add',
            'btn_route_params': {'id': id},
            'btn_title': 'messages_units_add.btn',
            'btn_label_hidden': 'sm',
            'btn_lg': true,
        } -%}

        {%- else -%}

        {%- include 'include/btn/del.html.twig' with {
            'btn_route': 'messages_units_del',
            'btn_route_params': {'id': id},
            'btn_title': 'messages_units_del.btn',
            'btn_label_hidden': 'sm',
            'btn_lg': true,
        } -%}

        {%- include 'include/btn/edit.html.twig' with {
            'btn_route': 'messages_units_edit',
            'btn_route_params': {'id': id},
            'btn_title': 'messages_units_edit.btn',
            'btn_label_hidden': 'sm',
            'btn_lg': true,
        } -%}

        {%- endif -%}

    {%- endif -%}

    {%- endblock div_right -%}
{%- endembed -%}
{%- endif -%}
