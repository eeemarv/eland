{%- extends 'categories/base/categories_base.html.twig' -%}

{%- block content -%}
    {%- block before_form -%}{%- endblock -%}

    {%- block form -%}
        {%- embed 'form/form_embed.html.twig' -%}
            {%- import 'macro/link.html.twig' as l -%}
            {%- import 'macro/btn_link.html.twig' as bl -%}

            {%- block form_a -%}
                {%- if form.name is defined -%}
                    {{- form_row(form.name, {
                        'label': 'label.name',
                        'addon_fa': 'clone'
                    }) -}}
                {%- endif -%}

                {%- if form.categories is defined -%}
                    {{- form_row(form.categories,{
                        'attr': {'data-categories-input': 'btn-info'}
                    }) -}}
                {%- endif -%}
            {%- endblock form_a -%}

            {%- block form_cancel_btn -%}
                {{- bl.cancel('categories') -}}
            {%- endblock form_cancel_btn -%}
        {%- endembed -%}
    {%- endblock form -%}

    {%- block after_form -%}{%- endblock -%}
{%- endblock content -%}
