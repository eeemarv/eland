{%- if config_bool('users.fields.postcode.enabled', schema) -%}
{%- embed 'users/users_show/list_item.html.twig' -%}
    {%- block dl -%}
        <dt>
            {{- 'label.postcode'|trans -}}
        </dt>
        <dd>
            {{- user.postcode|no_content -}}
        </dd>
    {%- endblock dl -%}
    {%- block div_right -%}
    {%- if pp_is_admin() or is_self -%}
        {%- include 'include/btn/edit.html.twig' with {
            'btn_route': 'users_postcode_edit' ~ (is_self ? '_self' : ''),
            'btn_route_params': is_self ? {} : {'id': id},
            'btn_title': 'users_postcode_edit.title',
            'btn_title_trans_params': {
                'user': account(id, schema),
                'self': is_self ? 'self' : 'some_user'
            },
            'btn_label_hidden': 'sm',
            'btn_lg': true,
        } -%}
    {%- endif -%}
    {%- endblock div_right -%}
{%- endembed -%}
{%- endif -%}
