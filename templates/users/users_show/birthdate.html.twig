{%- if not is_intersystem and config_bool('users.fields.birthdate.enabled', schema) -%}
{%- embed 'users/users_show/list_item.html.twig' -%}
    {%- import 'macro/lbl.html.twig' as l -%}
    {%- block dl -%}
        <dt>
            {{- 'label.birthdate'|trans -}}
        </dt>
        <dd>
            {{- user.birthdate|day_format(schema)|no_content -}}
        </dd>
        {#
        {%- if pp_is_admin() or su_is_owner(user.id) -%}
            <dt>
                {{- 'users_full_name.visible.label'|trans -}}
            </dt>
            <dd>
                {{- l.label(user.full_name_access) -}}
            </dd>
        {%- endif -%}
        #}
    {%- endblock dl -%}
    {%- block div_right -%}
    {%- if pp_is_admin() or is_self -%}
        {%- include 'include/btn/edit.html.twig' with {
            'btn_route': 'users_birthdate_edit' ~ (is_self ? '_self' : ''),
            'btn_route_params': is_self ? {} : {'id': id},
            'btn_title': 'users_birthdate_edit.title',
            'btn_title_trans_params': {
                'user': account(id, schema),
                'self': is_self ? 'self' : 'some_user'
            },
            'btn_label_hidden': 'sm',
            'btn_lg': true,
        } -%}
    {%- endif -%}
    {%- endblock div_right -%}
{%- endembed -%}
{%- endif -%}
