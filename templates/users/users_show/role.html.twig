{%- if not is_intersystem and (pp_is_admin() or su_is_owner(id)) -%}
{%- embed 'users/users_show/list_item.html.twig' -%}
    {%- import 'macro/lbl.html.twig' as l -%}
    {% block class -%}
        {%- if pp_is_admin() %} list-group-item-info
        {%- else %} owner
        {%- endif -%}
    {% endblock class %}
    {%- block item -%}
        <dt>
            {{- 'label.permissions_role'|trans -}}
        </dt>
        <dd>
            {%- if user.role is not defined or user.role == null -%}
                {{- null|no_content -}}
            {%- else -%}
                {{- l.label(user.role ~ '_role') -}}
            {%- endif -%}
        </dd>
    {%- endblock item -%}
    {%- block btn -%}
        {%- if pp_is_admin() or su_is_owner(id) -%}
            {%- include 'include/btn/password.html.twig' with {
                'btn_route': 'users_password_edit' ~ (su_is_owner(id) ? '_self' : ''),
                'btn_title': 'users_password_edit.title',
                'btn_title_trans_params': {
                    'user': account(id, schema),
                    'self': is_self ? 'self' : 'some_user'
                },
                'btn_label_hidden': 'sm',
                'btn_lg': true,
            } -%}
        {%- endif -%}
    {%- endblock btn -%}
{%- endembed -%}
{%- endif -%}
