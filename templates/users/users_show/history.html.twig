{%- if pp_has_role('admin') and config_bool('users.fields.admin_comments.enabled', schema) -%}
{%- embed 'users/users_show/list_item.html.twig' -%}
    {%- block class %} list-group-item-info{% endblock class -%}
    {%- block item -%}
        <dt>
            {{- 'label.creation_time'|trans -}}
        </dt>
        <dd>
            {{- user.created_at|min_format(schema)|no_content -}}
        </dd>
        <dt>
            {{- 'label.activation_time'|trans -}}
        </dt>
        <dd>
            {{- user.activated_at|min_format(schema)|no_content -}}
        </dd>
        <dt>
            {{- 'label.last_login'|trans -}}
        </dt>
        <dd>
            {{- last_login|min_format(schema)|no_content -}}
        </dd>
    {%- endblock item -%}
    {%- block btn -%}

    {%- endblock btn -%}
{%- endembed -%}
{%- endif -%}
