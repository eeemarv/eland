{%- if pp_is_admin() and config_bool('users.fields.admin_comments.enabled', schema) -%}
{%- embed 'users/users_show/list_item.html.twig' -%}
    {%- block class %} list-group-item-info{% endblock class -%}
    {%- block item -%}
        <dt>
            {{- 'label.admin_comments'|trans -}}
        </dt>
        <dd>
            {{- user.admin_comments|no_content -}}
        </dd>
    {%- endblock item -%}
    {%- block btn -%}
        {%- include 'include/btn/edit.html.twig' with {
            'btn_route': 'users_admin_comments_edit',
            'btn_title': 'users_admin_comments_edit.title',
            'btn_title_trans_params': {
                'user': account(id, schema),
                'self': is_self ? 'self' : 'some_user'
            },
            'btn_label_hidden': 'sm',
            'btn_lg': true,
        } -%}
    {%- endblock btn -%}
{%- endembed -%}
{%- endif -%}
