{%- extends 'users/base/users_single_base.html.twig' -%}

{%- block heading_fa -%}
    key
{%- endblock heading_fa -%}

{%- block heading_title -%}
    {%- if s_is_owner(user_id) -%}
        {{- 'users_password_set.title.personal'|trans -}}
    {%- else -%}
        {{- 'users_password_set.title.admin'|trans({
            '%user%': account(user_id, schema)
        }) -}}
    {%- endif -%}
{%- endblock -%}

{%- block content -%}

{%- embed 'form/form_embed.html.twig' -%}
    {%- import 'macro/link.html.twig' as l -%}
    {%- block form_content -%}

    {{- form_row(form.password, {
        'label': 'label.new_password',
        'help': 'help.new_password_safety'
    }) -}}

    {{- form_row(form.notify, {
        'label': 'label.send_notification_email',
        'disabled': not notify_enabled,
        'label_attr': {'class': 'checkbox-custom'}
    }) -}}

    {{- form_widget(form.submit,{
        'label': 'btn.save_password',
        'attr': {'class': 'btn-primary'}
    }) -}}

    {%- endblock form_content -%}
{%- endembed -%}
{%- endblock content -%}

{%- block css -%}
    {{- parent() -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
    {{- encore_entry_script_tags('generate_password') -}}
{%- endblock js -%}