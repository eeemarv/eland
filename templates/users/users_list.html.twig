{%- extends 'users/base/users_base.html.twig' -%}

{%- set csv_en = true -%}

{%- block assets_add -%}
    {{- parent() -}}
    {{- assets_add([
        'calc_sum.js',
        'users_distance.js',
        'datepicker'
    ]) -}}
    {%- if pp_role('admin') -%}
        {{- assets_add([
            'codemirror',
            'summernote',
            'summernote_email.js',
            'table_sel.js',
        ]) -}}
    {%- endif -%}
{%- endblock assets_add -%}

{%- block css -%}
    {{- parent() -}}
    {{- encore_entry_link_tags('footable') -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
	{{- encore_entry_script_tags('footable') -}}
	{{- encore_entry_script_tags('typeahead') -}}
{%- endblock js -%}