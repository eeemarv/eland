{%- extends 'docs/base/docs_base.html.twig' -%}

{%- block content -%}
{%- endblock content -%}

{%- block form_a -%}
    {%- if form.file is defined -%}
        {{- form_row(form.file, {
            'label': 'label.file',
            'pre_addon': {
                'fa': 'file-o'
            }
        }) -}}
    {%- endif -%}

    {%- if form.name is defined -%}
        {{- form_row(form.name, {
            'label': 'label.name',
            'help': 'label.optional',
            'pre_addon': {
                'fa': 'file-o'
            },
            'required': false
        }) -}}
    {%- endif -%}

    {%- if form.access is defined -%}
        {{- form_row(form.access, {
            'label': 'access.visible_for'
        }) -}}
    {%- endif -%}

    {%- if form.map_name -%}
        {{- form_row(form.map_name, {
            'label': 'label.map_name',
            'help': 'docs_add.map_name.help',
            'pre_addon': {
                'fa': 'folder-o'
            },
            'required': false
        }) -}}
    {%- endif -%}
{%- endblock form_a -%}

{%- if app.request.query.get('map_id') -%}
    {%- set cancel_route = 'docs_map' -%}
    {%- set cancel_route_params = {'id': app.request.query.get('map_id')} -%}
{%- else -%}
    {%- set cancel_route = 'docs' -%}
{%- endif -%}
