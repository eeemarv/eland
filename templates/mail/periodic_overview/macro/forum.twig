{%- trans_default_domain 'mail' -%}

{%- macro html(c) -%}
{%- set et = c.et -%}
	<h3>
		{{- 'periodic_overview.forum.title'|trans -}}
	</h3>

	{%- if c.forum -%}
	<ul>
	{%- for f in c.forum -%}
	<li>
	{{- context_url_open('forum_topic', mpp_ary(c.user_id, c.schema), {'id': f.id})|raw -}}
	{{- f.subject -}}
	</a>
	</li>
	{%- endfor -%}
	</ul>
	{%- else -%}
	<p>
	{{- 'periodic_overview.forum.none'|trans({
		'%link_open%': context_url_open('forum', mpp_ary(c.user_id, c.schema), {}),
		'%link_close%': '</a>'
	})|raw -}}
	</p>
	{%- endif -%}

{%- endmacro html -%}

{% macro text(c) %}
{%- set et = c.et -%}
{% autoescape false %}

{{ 'periodic_overview.forum.title'|trans|underline }}

{% for f in c.forum %}
* {{ f.subject }} {{ context_url('forum_topic', mpp_ary(c.user_id, c.schema), {'id': f.id}) }}
{% else %}
{{ 'periodic_overview.forum.none'|trans({
	'%link_open%' : '',
	'%link_close%' : ''
}) }}
{% endfor %}
{% endautoescape %}
{% endmacro text %}
