{% extends 'mail/base/private_msg_intersystem.twig' %}
{%- trans_default_domain 'mail' -%}

{% block subject_line -%}
    {%- set offer_want = message.is_offer ? 'offer' : 'want' -%}
    {{- ('message_msg.subject_' ~ offer_want)|trans({
        '%message_subject%': message.subject
    })|raw -}}
{%- endblock subject_line %}

{% block html_explain -%}
    {%- set offer_want = message.is_offer ? 'offer' : 'want' -%}
    {{- ('message_msg_intersystem.explain_' ~ offer_want)|trans({
        '%from_account%': account(from_user.id, from_schema),
        '%from_system_name%': config_str('system.name', from_schema),
        '%message_subject%': message.subject,
        '%link_message_open%': context_url_open('messages_show', mpp_ary(to_user.id, to_schema), {'id': message.id}),
        '%link_message_close%': '</a>'
    })|raw -}}
{%- endblock html_explain -%}

{% block text_explain %}
{%- set offer_want = message.is_offer ? 'offer' : 'want' -%}
{{ ('message_msg_intersystem.explain_' ~ offer_want)|trans({
    '%from_account%': account(from_user.id, from_schema),
    '%from_system_name%': config_str('system.name', from_schema),
    '%message_subject%': message.subject,
    '%link_message_open%': '',
    '%link_message_close%': ''
})|raw }}
{% endblock text_explain %}
