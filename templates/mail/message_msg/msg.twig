{% extends 'mail/base/private_msg.twig' %}
{%- trans_default_domain 'mail' -%}

{% block subject_line -%}
    {{- ('message_msg.subject_' ~ message.offer_want)|trans({
        'message_subject': message.subject
    })|raw -}}
{%- endblock subject_line %}

{% block html_explain -%}
    {{- ('message_msg.explain_' ~ message.offer_want)|trans({
        'from_account': account(from_user.id, from_schema),
        'ao_from_account': context_url_open('users_show', mpp_ary(to_user.id, to_schema), {'id': from_user.id}),
        'ac': '</a>',
        'message_subject': message.subject,
        'ao_message': context_url_open('messages_show', mpp_ary(to_user.id, to_schema), {'id': message.id})
    })|raw -}}
{%- endblock html_explain -%}

{% block text_explain %}
{{ ('message_msg.explain_' ~ message.offer_want)|trans({
    'from_account': account(from_user.id, from_schema),
    'ao_from_account': '',
    'ac': '',
    'message_subject': message.subject,
    'ao_message': ''
})|raw }}
{% endblock text_explain %}
