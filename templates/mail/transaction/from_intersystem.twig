{%- extends 'mail/transaction/intersystem.twig' -%}
{%- trans_default_domain 'mail' -%}

{% block subject_line -%}
    {{- 'transaction_intersystem.subject'|trans({
        '%from_account%': transaction.real_from
            ~ ' ['
            ~ user_fullname(from_user_id, schema)
            ~ ']',
        '%to_account%': account(to_user_id, schema)
    })|raw -}}
{%- endblock subject_line -%}

{%- block html_from -%}
{{- transaction.real_from
    ~ ' ['
    ~ user_fullname(from_user_id, schema)
    ~ ']' -}}
{%- endblock -%}

{% block text_from %}
{{ (transaction.real_from
    ~ ' ['
    ~ user_fullname(from_user_id, schema)
    ~ ']')|raw }}
{% endblock %}
