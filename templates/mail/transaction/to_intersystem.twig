{%- extends 'mail/transaction/intersystem.twig' -%}
{%- trans_default_domain 'mail' -%}

{% block subject_line -%}
    {{- 'transaction_intersystem.subject'|trans({
        '%from_account%': account(from_user_id, schema),
        '%to_account%': transaction.real_to
            ~ ' ['
            ~ user_fullname(to_user_id, schema)
            ~ ']'
    })|raw -}}
{%- endblock subject_line -%}

{%- block html_to -%}
{{- transaction.real_to
    ~ ' ['
    ~ user_fullname(to_user_id, schema)
    ~ ']' -}}
{%- endblock -%}

{% block text_to %}
{{ (transaction.real_to
    ~ ' ['
    ~ user_fullname(to_user_id, schema)
    ~ ']')|raw }}
{% endblock %}
