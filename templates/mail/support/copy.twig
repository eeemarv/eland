{%- trans_default_domain 'mail' -%}

{% block subject_line -%}
    {{- 'support_copy.subject'|trans({
        '%system_name%': config('systemname', schema)
    }) -}}
{%- endblock -%}

{% block html_content -%}
    <p>
        {{- 'support_copy.explain'|trans({
            '%system_name%': config('systemname', schema)
        }) -}}
    </p>
    <hr />
    <p>
        {{- message -}}
    </p>
    <hr />
{%- endblock %}

{% block text_content %}
{% autoescape false %}

{{ 'support_copy.explain'|trans({
    '%system_name%': config('systemname', schema)
}) }}
