{% extends 'mail/base/private_msg_copy.twig' %}
{%- trans_default_domain 'mail' -%}

{% block subject_line -%}
    {{- 'user_msg_copy.subject'|trans({
        'to_account': account(to_user.id, to_schema)
    })|raw -}}
{%- endblock subject_line %}

{% block html_explain -%}
    {{- 'user_msg_copy.explain'|trans({
        'to_account': account(to_user.id, to_schema),
        'ao': context_url_open('users_show', mpp_ary(from_user.id, from_schema), {'id': to_user.id}),
        'ac': '</a>'
    })|raw -}}
{%- endblock html_explain -%}

{% block text_explain %}
{{ 'user_msg_copy.explain'|trans({
    'to_account': account(to_user.id, to_schema),
    'ao': '',
    'ac': ''
})|raw }}
{% endblock text_explain %}
