{% extends 'mail/base/private_msg.twig' %}
{%- trans_default_domain 'mail' -%}

{% block subject_line -%}
    {{- 'user_msg.subject'|trans({
        '%from_account%': account(from_user.id, from_schema)
    })|raw -}}
{%- endblock subject_line %}

{% block html_explain -%}
    {{- 'user_msg.explain'|trans({
        '%from_account%': account(from_user.id, from_schema),
        '%link_open%': context_url_open('users_show', mpp_ary(to_user.id, to_schema), {'id': from_user.id}),
        '%link_close%': '</a>'
    })|raw -}}
{%- endblock html_explain -%}

{% block text_explain %}
{{ 'user_msg.explain'|trans({
    '%from_account%': account(from_user.id, from_schema),
    '%link_open%': '',
    '%link_close%': ''
})|raw }}
{% endblock text_explain %}
