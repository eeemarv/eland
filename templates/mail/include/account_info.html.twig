{%- trans_default_domain 'mail' -%}

{%- set account_info -%}
<table border="0" cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <td>
            <a href="{{- context_url('login', mpp_anon_ary(schema),
            {'login': account_code(user_id, schema)}) -}}">
            {{- 'label.login'|trans -}}
            </a>
        </td>
    </tr>
</table>
{%- include 'mail/include/spacer20.html.twig' -%}
<table border="1" bgcolor="eeeeee" cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <td width="300" style="padding-left: 10px">
            {{- 'label.account_code'|trans -}}
        </td>
        <td style="font-style: bold; padding-left: 10px">
            {{- account_code(user_id, schema) -}}
        </td>
    </tr>
    <tr>
        <td width="300" style="padding-left: 10px">
            {{- 'label.username'|trans -}}
        </td>
        <td style="font-style: bold; padding-left: 10px">
            {{- username(user_id, schema) -}}
        </td>
    </tr>
    <tr>
        <td width="300" style="padding-left: 10px">
            {{- 'label.balance'|trans -}}
        </td>
        <td style="font-style: bold; padding-left: 10px">
            {{- account_balance(user_id, schema) -}}
            &nbsp;
            {{- config_str('transactions.currency.name', schema) -}}
        </td>
    </tr>
</table>
{%- endset -%}

{%- embed 'mail/embed/table600.html.twig' -%}
    {%- trans_default_domain 'mail' -%}
    {%- block td_top -%}20px{%- endblock -%}
    {%- block td_bottom -%}20px{%- endblock -%}
    {%- block bgcolor -%}{{- bgcolor_system_name -}}{%- endblock -%}
    {%- block td_align -%}left{%- endblock -%}
    {%- block td_style %}font-size: 16px; color: #ffffff;{%- endblock -%}
    {%- block td_content -%}
        {{- 'label.your_account'|trans -}}
    {%- endblock td_content -%}
{%- endembed -%}

{%- include 'mail/include/spacer20.html.twig' -%}

{%- include 'mail/include/info_panel.html.twig' with {
    'info': account_info|raw
} -%}

{%- include 'mail/include/spacer20.html.twig' -%}
{%- include 'mail/include/bgspacer40.html.twig' -%}
