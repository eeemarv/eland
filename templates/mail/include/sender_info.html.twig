{%- trans_default_domain 'mail' -%}

{%- embed 'mail/embed/table600.html.twig' -%}
    {%- trans_default_domain 'mail' -%}
    {%- block td_top -%}20px{%- endblock -%}
    {%- block td_bottom -%}20px{%- endblock -%}
    {%- block bgcolor -%}ffffff{%- endblock -%}
    {%- block td_align -%}left{%- endblock -%}
    {%- block td_style %}font-size: 16px;{%- endblock -%}
    {%- block td_content -%}
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
            <td>
                {{- 'b.sender_info.email'|trans({'%email%': email}) -}}
            </td>
        </tr>
        <tr>
            <td>
                {{- 'b.sender_info.ip'|trans({'%ip%': ip}) -}}
            </td>
        </tr>
        <tr>
            <td>
                {{- 'b.sender_info.agent'|trans({'%agent%': agent}) -}}
            </td>
        </tr>
    </table>
    {%- endblock td_content -%}
{%- endembed -%}

{%- include 'mail/include/bgspacer40.html.twig' -%}
