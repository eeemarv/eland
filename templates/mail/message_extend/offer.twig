{%- extends 'mail/message_extend/base.twig' -%}
{%- trans_default_domain 'mail' -%}

{% block subject_line -%}
    {{- 'message_extend_offer.subject'|trans({
        'message_subject': message.subject
    })|raw -}}
{%- endblock subject_line -%}

{%- block sub_header -%}message_extend_offer.sub_header{%- endblock -%}

{%- block html_explain -%}
{{- 'message_extend_offer.explain'|trans({
    'message_subject': message.subject,
    'ao': context_url_open('messages_show', mpp_ary(user_id, schema), {'id': message.id}),
    'ac': '</a>',
    'days': config_int('messages.cleanup.after_days', schema)
})|raw -}}
{%- endblock html_explain -%}

{% block text_explain %}
{{ 'message_extend_offer.explain'|trans({
    'message_subject': message.subject,
    'ao': '',
    'ac': '',
    'days': config_int('messages.cleanup.after_days', schema)
})|raw }}
{% endblock text_explain %}
