{%- extends 'mail/base/base.twig' -%}
{%- trans_default_domain 'mail' -%}

{%- block subject_line -%}
    {{- 'password_reset_confirm.subject'|trans -}}
{%- endblock subject_line %}

{%- block html_content -%}

<p>
    {{- 'password_reset_confirm.html_msg'|trans({
        '%link_open%': context_url_open(
            'password_reset_set', mpp_anon_ary(schema), {'token': token}),
        '%link_close%': '</a>',
        '%system_name%': config_str('system.name', schema)
    })|raw -}}
</p>

<p>
    {{- 'expiration.1_day'|trans -}}
</p>

<p>
    {{- 'password_reset_confirm.explain'|trans({
        '%system_name%': config_str('system.name', schema),
        '%link_open%': context_url_open('home', mpp_anon_ary(schema), {}),
        '%link_close%': '</a>'
    })|raw -}}
</p>
{%- endblock html_content -%}

{% block text_content %}
{% autoescape false %}

{{ 'password_reset_confirm.text_msg'|trans({
    '%system_name%': config_str('system.name', schema)
}) }}

{{ context_url('password_reset_set', mpp_anon_ary(schema), {'token': token}) }}

{{ 'expiration.1_day'|trans }}

{{ 'password_reset_confirm.explain'|trans({
    '%system_name%': config_str('system.name', schema),
    '%link_open%': '',
    '%link_close%': ''
}) }}

{% endautoescape %}
{% endblock text_content %}
