{%- extends 'forum/base/forum_base.html.twig' -%}

{%- block btn_top_add -%}
    {%- if pp_role('admin') or pp_role('user') -%}
        {%- include 'include/btn_top/add.html.twig' with {
            'btn_route': 'forum_add_topic',
            'btn_title': 'forum_add_topic.title'
        } -%}
    {%- endif -%}
{%- endblock btn_top_add -%}

{%- set csv_en = true -%}

{%- block filter_form_a -%}
    {%- include 'form/q_filter.html.twig' -%}
{%- endblock filter_form_a -%}

{%- block data -%}
    {%- if topics -%}
        {%- include 'forum/include/topics_list.html.twig' -%}
    {%- else -%}
        {%- include 'include/no_results.html.twig' with {
            'message': 'forum.no_topics'
        } -%}
    {%- endif -%}
{%- endblock data -%}

{%- block css -%}
    {{- parent() -}}
    {{- encore_entry_link_tags('footable') -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
	{{- encore_entry_script_tags('footable') -}}
{%- endblock js -%}