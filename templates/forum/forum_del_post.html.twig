{%- extends 'forum/base/forum_form.html.twig' -%}

{%- block heading_title -%}
    {%- set heading_title_trans_key = 'forum_del_post.title.'
        ~ (su_is_owner(forum_post.user_id) ? 'personal' : 'admin') -%}

    {{- heading_title_trans_key|trans({
        '%topic_subject%': forum_topic.subject,
        '%user%': account(forum_post.user_id, schema)
    }) -}}
{%- endblock heading_title -%}

{%- set cancel_route = 'forum_topic' -%}
{%- set cancel_route_params = {'id': forum_topic.id} -%}

{%- block form_submit_btn -%}
    {%- include 'form/submit_del_btn.html.twig' -%}
{%- endblock form_submit_btn -%}

{%- block css -%}
    {{- parent() -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
{%- endblock js -%}