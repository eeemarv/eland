{%- extends 'forum/base/forum_form.html.twig' -%}

{%- block heading_title -%}
    {{- 'forum_del_topic.title'|trans({
        'self': su_is_owner(forum_topic.user_id) ? 'self' : 'some_user',
        'topic_subject': forum_topic.subject,
        'user': account(forum_topic.user_id, schema)
    }) -}}
{%- endblock -%}

{%- block pre_form -%}
    {%- embed 'embed/post.html.twig' with {
        'post': forum_first_post
    } -%}
        {%- block actions -%}{%- endblock -%}
    {%- endembed -%}
{%- endblock pre_form -%}

{%- set cancel_route = 'forum_topic' -%}
{%- set cancel_route_params = {'id': forum_topic.id} -%}

{%- block form_submit_btn -%}
    {%- include 'form/submit_del_btn.html.twig' -%}
{%- endblock form_submit_btn -%}
