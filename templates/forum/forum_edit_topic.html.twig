{%- extends 'forum/base/forum_form.html.twig' -%}

{%- set cancel_route = 'forum_topic' -%}

{%- block assets_add -%}
    {{- parent() -}}
    {{- assets_add(['summernote', 'summernote_forum_post.js']) -}}
{%- endblock assets_add -%}

{%- block heading_title -%}
    {%- set heading_title_trans_key = 'forum_edit_topic.title.'
        ~ (su_is_owner(forum_topic.user_id) ? 'personal' : 'admin') -%}

    {{- heading_title_trans_key|trans({
        '%topic_subject%': forum_topic.subject,
        '%user%': account(forum_topic.user_id, schema)
    }) -}}
{%- endblock heading_title -%}