{%- extends 'forum/forum_base.html.twig' -%}

{%- block heading_title -%}
    {%- set heading_title_trans_key = 'forum_edit_post.title.'
        ~ (s_is_owner(forum_post.user_id) ? 'personal' : 'admin') -%}

    {{- heading_title_trans_key|trans({
        '%topic_subject%': forum_topic.subject,
        '%user%': account(forum_post.user_id, schema)
    }) -}}
{%- endblock heading_title -%}

{%- block css -%}
    {{- parent() -}}
    {{- encore_entry_link_tags('summernote') -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
	{{- encore_entry_script_tags('summernote') -}}
{%- endblock js -%}