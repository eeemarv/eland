{%- extends 'forum/forum_base.html.twig' -%}

{%- block heading_title -%}
    {{- 'forum_add_topic.title'|trans -}}
{%- endblock heading_title -%}

{%- block content -%}

{%- embed 'form/embed.html.twig' -%}
    {%- import 'macro/btn_link.html.twig' as bl -%}
    {%- block form_content -%}

    {{- form_row(form.subject, {
        'label': false,
        'attr': {
            'placeholder': 'label.subject'
        }
    }) -}}

    {{- form_row(form.content, {
        'label': false,
        'attr': {
            'rows': 5,
            'minlength': 10,
            'maxlength': 5000
        }
    }) -}}

    {{- bl.cancel('forum') -}}

    {{- form_widget(form.submit,{
        'label': 'btn.add',
        'attr': {'class': 'btn-success'}
    }) -}}

    {%- endblock form_content -%}
{%- endembed -%}

{%- endblock content -%}

{%- block css -%}
    {{- parent() -}}
    {{- encore_entry_link_tags('summernote') -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
	{{- encore_entry_script_tags('summernote') -}}
{%- endblock js -%}