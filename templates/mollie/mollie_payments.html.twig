{%- extends 'mollie/base/mollie_base.html.twig' -%}

{%- block btn_top_add -%}
    {%- include 'include/btn_top/add.html.twig' with {
        'btn_route': 'mollie_payments_add',
        'btn_title': 'mollie_payments_add.title'
    } -%}
{%- endblock btn_top_add -%}

{%- block btn_top_config -%}
    {%- include 'include/btn_top/config.html.twig' with {
        'btn_route': 'mollie_config',
        'btn_title': 'mollie_config.title'
    } -%}
{%- endblock btn_top_config -%}

{%- set csv_en = true -%}

{%- block assets_add -%}
    {{- parent() -}}
    {{- assets_add([
        'codemirror',
        'summernote',
        'summernote_email.js',
        'datepicker',
        'table_sel.js'
    ]) -}}
{%- endblock assets_add -%}

{%- block heading_title -%}
    {{- 'mollie_payments.title'|trans -}}
{%- endblock heading_title -%}

{%- block heading_append -%}
    {%- include 'include/heading_filter.html.twig' -%}
    {%- include 'include/heading_btn_filter.html.twig' -%}
{%- endblock heading_append -%}

{%- block css -%}
    {{- parent() -}}
    {{- encore_entry_link_tags('footable') -}}
    {{- encore_entry_link_tags('summernote') -}}
{%- endblock css -%}

{%- block js -%}
    {{- parent() -}}
	{{- encore_entry_script_tags('footable') -}}
	{{- encore_entry_script_tags('typeahead') -}}
	{{- encore_entry_script_tags('summernote') -}}
{%- endblock js -%}