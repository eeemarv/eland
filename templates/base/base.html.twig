	<meta name="theme-color" content="#ffffff">

</head>
<body{%- block body_attr -%}{%- endblock -%}>

{%- block navbar -%}
	<div class="navbar navbar-default navbar-fixed-top{%- if pp_role('admin') %} bg-info{%- elseif pp_role('guest') %} bg-warning{%- endif -%}">
		<div class="container-fluid">
			<div class="navbar-header">

			{%- block navbar_toggle_button -%}{%- endblock -%}

			{%- block logo -%}{%- endblock -%}

			<a href="{%- block system_link -%}#{%- endblock -%}" class="navbar-brand">
			{{- block('title') -}}
			</a>
			</div>

		{%- block navbar_collapse -%}{%- endblock -%}

		</div>
	</div>
{%- endblock navbar -%}

