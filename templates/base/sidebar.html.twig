{%- extends 'base/base.html.twig' -%}
{%- import 'macro/alert.html.twig' as a -%}
{%- import 'macro/menu.html.twig' as m -%}

{%- block title -%}{{- config('systemname', schema) -}}{%- endblock -%}

{%- block body_attr %} class="body-navbar{%- if pp_role('admin') %} admin{%- elseif pp_role('guest') %} guest{%- endif -%}"{%- endblock body_attr -%}

{%- block logo -%}
	{%- if config('logo', schema) -%}
		<a href="{{- block('system_link') -}}" class="navbar-left hidden-xs logo">
			<img src="{{- s3_url(config('logo', schema)) -}}" height="50">
		</a>
	{%- endif -%}
{%- endblock logo -%}

{%- block system_link -%}
	{%- if config('homepage_url', schema) -%}
		{{- config('homepage_url', schema) -}}
	{%- elseif pp_role('anonymous') -%}
		{{- path('login', pp_ary()) -}}
	{%- else -%}
		{{- path(r_default(), pp_ary()) -}}
	{%- endif -%}
{%- endblock -%}

{%- block page_container -%}

	<div class="swiper-container">
	<div class="row-offcanvas row-offcanvas-left">
	<div id="sidebar" class="sidebar-offcanvas">

	<br>
	<ul class="nav nav-pills nav-stacked">

	{%- block menu_sidebar -%}
		{{- m.menu_sidebar() -}}
	{%- endblock menu_sidebar -%}

	</ul>

	</div>

	<div id="wrap">
	<div id="main" class="container-fluid clear-top{%- if pp_role('admin') %} admin{%- endif -%}">

	{{- a.alert() -}}

	<div class="row">
	<div class="col-md-12 top-buttons">

	<div class="visible-xs pull-left button-offcanvas menu-button">
		<button type="button" class="btn btn-primary btn-lg" data-toggle="offcanvas" title="Menu">
			<i class="fa fa-chevron-left"></i>
		</button>
	</div>

	{%- block btn_top -%}
		{{- btn_top() -}}
	{%- endblock btn_top -%}

	{%- block btn_nav -%}
		{{- btn_nav() -}}
	{%- endblock btn_nav -%}

	</div>
	</div>

	{%- block heading -%}
		{{- heading() -}}
		{{- heading_sub() -}}
	{%- endblock heading -%}

	{%- block content -%}
		{{- content|raw -}}
	{%- endblock content -%}

	</div>
	</div>
	</div>
{%- endblock page_container -%}
