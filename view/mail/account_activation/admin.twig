{%- extends 'mail/base/admin.twig' -%}
{%- trans_default_domain 'mail' -%}

{%- block subject_line -%}
{{- 'account_activation_admin.subject'|trans({
    '%account_name%': account(user_id, schema)
}) -}}
{%- endblock subject_line %}

{%- block html_content -%}
<p>
{{- 'account_activation_admin.message'|trans({
    '%link_open%': mail_link_open('users', {'id': user_id}, schema, email_token),
    '%link_close%': '</a>',
    '%account_name%': account(user_id, schema),
})|raw -}}
</p>

<p>
{%- if user_email -%}
    {{- 'account_activation_admin.email_sent'|trans -}}
{%- else -%}
    {{- 'account_activation_admin.no_email_sent'|trans -}}
{%- endif -%}
</p>

{%- endblock html_content -%}

{% block text_content %}
{{ 'account_activation_admin.message'|trans({
    '%link_open%': '',
    '%link_close%': '',
    '%account_name%': account(user_id, schema),
}) }}

{{ mail_url('users', {'id': user_id}, schema, email_token) }}

{% if user_email %}
{{ 'account_activation_admin.email_sent'|trans }}
{% else %}
{{ 'account_activation_admin.no_email_sent'|trans }}
{% endif %}
{% endblock text_content %}
