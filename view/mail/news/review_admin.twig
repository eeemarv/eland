{% extends 'mail/base/news_admin.twig' %}
{%- trans_default_domain 'mail' -%}

{% block subject_line -%}
    {{- 'news_review_admin.subject'|trans({
        '%name%': news.headline
    }) -}}
{%- endblock subject_line %}

{% block html_content %}

<h3>
    {{- 'news_review_admin.title'|trans -}}
</h3>

<p>
    {{- 'news_review_admin.message'|trans({
        '%name%': news.headline
    }) -}}
</p>

<p>
    <a href="{{- mail_url('news', {'id': news.id}, schema, email_token) -}}">
        {{- 'news_review_admin.action'|trans -}}
    </a>
</p>

{% endblock html_content %}

{% block text_content %}

{{ 'news_review_admin.title'|trans|underline|raw }}

{{ 'news_review_admin.message'|trans({
    '%name%': news.headline
})|raw }}

{{ 'news_review_admin.action'|trans|raw }}

{{ mail_url('news', {'id': news.id}, schema)|raw }}

{% endblock text_content %}
