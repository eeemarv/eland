{%- extends 'base/base.html.twig' -%}
{%- import 'macro/alert.html.twig' as a -%}

{%- block title -%}{{- config('systemname', schema) -}}{%- endblock -%}
{%- block system_name -%}{{- config('systemname', schema) -}}{%- endblock -%}
{%- block system_link -%}
	{{- config('default_landing_page', schema) -}}
{%- endblock -%}

{%- block page_container -%}

	<div class="swiper-container">
	<div class="row-offcanvas row-offcanvas-left">
	<div id="sidebar" class="sidebar-offcanvas">

	<br>
	<ul class="nav nav-pills nav-stacked">

	{%- for m in sidebar_menu -%}
		<li{%- if m.active %} class="active"{%- endif -%}>
			{{- m.menu_item -}}
		</li>
	{%- endfor -%}

	</ul>

	</div>

	<div id="wrap">
	<div id="main" class="container-fluid clear-top{{- main_div_class -}}">

	{{- a.alert(alert_ary()) -}}

	<div class="row">
	<div class="col-md-12 top-buttons">

	<div class="visible-xs pull-left button-offcanvas menu-button">
		<button type="button" class="btn btn-primary" data-toggle="offcanvas" title="Menu">
			<i class="fa fa-chevron-left"></i>
		</button>
	</div>

	{{- btn_top() -}}
	{{- btn_nav() -}}

	</div>
	</div>

	{{- heading() -}}
	{{- heading_sub() -}}

	{%- block content -%}{%- endblock -%}

	</div>
	</div>
	</div>
{%- endblock page_container -%}
